<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1 class="text-3xl font-bold mb-4">Item List</h1>
    <ul>
      <% lists.forEach(function(item) { %>
      <li class="mb-2 flex items-center">
        <span><%= item.name %></span>
        <form action="/lists/<%= item.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE" />
          <button
            type="submit"
            class="ml-4 bg-red-500 text-white p-2 rounded hover:bg-red-700"
          >
            Delete
          </button>
        </form>
      </li>
      <% }); %>
    </ul>
    <form action="/lists" method="POST" class="mt-4">
      <input
        type="text"
        name="name"
        placeholder="New Item Name"
        class="p-2 border rounded"
      />
      <button
        type="submit"
        class="bg-blue-500 text-white p-2 rounded hover:bg-blue-700"
      >
        Add Item
      </button>
    </form>
  </body>
</html>
