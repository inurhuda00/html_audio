    <script>
      $(function () {
        document.body.className = "open";
      });

      const modal = document.getElementById("modal");
      const openButton = document.getElementById("openButton");

      // Event listener for the "open" button
      openButton.addEventListener("click", () => {
        modal.style.display = "none";
        document.body.className = "close";
        Play();
      });

      // music script
      var musrik = document.getElementById("song");
      var player,
        playing = false;

      function Play() {
        if (musrik.paused && !playing) {
          musrik.play();
        } else if (playing) {
          musrik.pause();
        }
      }

      musrik.addEventListener("play", function () {
        playing = true;
      });

      musrik.addEventListener("pause", function () {
        playing = false;
      });
    </script>

    <script>
      $(document).ready(function () {
        $("#comment-form").on("submit", function (event) {
          event.preventDefault(); // Prevent default form submission

          // Gather form data
          const formData = {
            nama: $("#nama").val(),
            ucapan: $("#ucapan").val(),
          };

          // Send the form data to the server
          $.post("/comments", formData, function (response) {
            // Handle the server response, e.g., show a success message
            console.log(response);

            // Clear the form after submission
            $("#nama").val("");
            $("#ucapan").val("");

            fetchList();
          });
        });

        // Function to fetch and display the list
        function fetchList() {
          $.get("/comments", function (data) {
            $("#list").empty(); // Clear the list

            console.log(data);
            data.forEach(function (item) {
              $("#list").append($("<li>").text(JSON.stringify(item)));
            });
          });
        }

        // Initial fetch
        fetchList();
      });
    </script>
